<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TesteDPlus.Views.ClientePage"
             Title="{Binding TituloPagina}">
    <VerticalStackLayout Padding="15">
      <ActivityIndicator IsVisible="{Binding LoadingIsVisible}"
                         IsRunning="{Binding LoadingIsVisible}"
                         Color="Blue"
                         HeightRequest="30"/>
        <Label Text="Nome"/>
        <Entry Text="{Binding ClienteDto.Nome}" Margin="0,0,0,10"/>

        <Label Text="Sobrenome"/>
        <Entry Text="{Binding ClienteDto.SobreNome}" Margin="0,0,0,10"/>

        <Label Text="Idade"/>
        <Entry Text="{Binding ClienteDto.Idade}" Keyboard="Numeric" Margin="0,0,0,10"/>

        <Label Text="Endereço"/>
        <Entry Text="{Binding ClienteDto.Endereco}" Margin="0,0,0,10"/>

        <Button Text="Salvar" Command="{Binding GuardarCommand}" BackgroundColor="Orange"/>
    </VerticalStackLayout>
</ContentPage>
